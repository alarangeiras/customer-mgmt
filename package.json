{
  "name": "customer-mngmt",
  "version": "0.0.1",
  "scripts": {
    "dev": "serverless offline",
    "fmt:fix": "prettier --write \"src/**/*.ts\"",
    "fmt:check": "prettier --check \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "test": "jest --pass-with-no-tests --no-cache --coverage",
    "validate": "npm run fmt:check && npm run lint:check"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.16.0",
    "@middy/core": "^2.5.3",
    "@middy/http-json-body-parser": "^2.5.3",
    "class-validator": "^0.13.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@serverless/typescript": "^2.23.0",
    "@types/aws-lambda": "^8.10.91",
    "@types/jest": "^27.4.0",
    "@types/node": "^14.18.9",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "dotenv": "^14.2.0",
    "esbuild": "^0.14.11",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "jest-ts-auto-mock": "^2.0.0",
    "serverless": "^2.23.0",
    "serverless-esbuild": "^1.23.3",
    "serverless-offline": "^8.3.1",
    "serverless-offline-dotenv": "^0.4.0",
    "serverless-plugin-typescript": "^2.1.0",
    "ts-auto-mock": "^3.5.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.5"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "compiler": "ttypescript"
      }
    },
    "setupFiles": [
      "<rootDir>jest.config.ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.controller.ts",
      "**/*.repository.ts",
      "**/*.util.ts"
    ],
    "coverageDirectory": "../coverage"
  }
}